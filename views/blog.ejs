<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./partials/head') %>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Homepage</title>
</head>
<body>
	<%- include('./partials/nav') %>
	<div class="container">
		<h1><%= blog.title %></h1>
		<img src="<%= blog.coverImageUrl %>" width="650pxs" alt="">
		<p><%= blog.body %></p>
	</div>
	<div class="container mt-4">
		<img src="<%= blog.createdBy.profileImageUrl %>" width="60px" alt="">
		<%= blog.createdBy.fullName %>
	</div>
	<div class="container mt-3">
		<h1>Comments(<%= comments.length %>)</h1>
		<% if (locals.user) { %>
			<form method="post" action="/blog/comment/<%= blog._id %>">
				<div class="mb-3">
				  <input type="text" class="form-control" name="content" placeholder="Enter your comment">
				</div>
				<button class="btn btn-sm btn-primary" type="submit">Add</button>
			</form>		 
			
		<% } %>
		<div class="mt-3">
			<% comments.forEach(comment => { %>
				<div>
					<img src="<%= comment.createdBy.profileImageUrl %>" width="60px" alt="">
	<%= comment.createdBy.fullName %>: <pre><%= comment.content %></pre>
				</div>
			 
			<% }) %>
		</div>
	</div>
	<%- include('./partials/scripts') %>
</body>
</html>